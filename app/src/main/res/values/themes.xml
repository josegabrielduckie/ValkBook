<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Socialing" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fondo</item>
        <item name="colorPrimaryDark">@color/cuadrosTexto</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Socialing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Socialing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Socialing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyProgressBarTwo" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">@color/fondo</item>
        <item name="colorControlActivated">@color/cuadrosTexto</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:progressDrawable">@drawable/customprogresbar</item>
        <item name="android:minWidth">2000dp</item>
    </style>
</resources>
